---
const {id, customClass, onclick } = Astro.props;
---
<div class=`${customClass}`>
  <button
    aria-label="Close"
    id={id ? id : null}
    onclick={onclick ? onclick : null}
    class="w-10 h-10 rounded-full bg-dark dark:bg-darkmode-dark relative shadow"
  >
    <span
      class="w-5 h-1 top-1/2 -translate-y-1/2 left-1/2 -translate-x-1/2 bg-body dark:bg-darkmode-body rounded-full block rotate-45 absolute"
    ></span>
    <span
      class="w-5 h-1 top-1/2 -translate-y-1/2 left-1/2 -translate-x-1/2 bg-body dark:bg-darkmode-body rounded-full block -rotate-45 absolute"
    ></span>
  </button>
</div>